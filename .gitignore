import pandas as pd
import numpy as np
import folium
from folium.plugins import HeatMap
import matplotlib.pyplot as plt


def find_nearest_station(lat, lon, metro_df):
    metro_df['distance'] = np.sqrt((metro_df['lat'] - lat)2 + (metro_df['lng'] - lon)2)
    nearest = metro_df.loc[metro_df['distance'].idxmin()]
    return nearest['line'], nearest['name']

df_cleaned[['nearest_line', 'nearest_station']] = df_cleaned.apply(
    lambda row: pd.Series(find_nearest_station(row['gps_lat'], row['gps_lon'], metro_df)), axis=1
)

